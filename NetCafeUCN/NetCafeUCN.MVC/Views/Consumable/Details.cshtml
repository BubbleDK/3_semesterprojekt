@model NetCafeUCN.MVC.Models.ConsumableDto

@{
    ViewData["Title"] = "Details";
}

<h1>Oplysninger</h1>

<div>
    <h4>Mad & Drikkevarer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Beskrivelse</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            <label>Produktnavn</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        @if(Context.User.IsInRole("Administrator"))
        {
        <dt class = "col-sm-2">
            <label>Produktnummer</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductNumber)
        </dd>
        <dt class = "col-sm-2">
            <label>Produkttype</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            <label>Aktiv</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        }
    </dl>
</div>
<div>
    @if(Context.User.IsInRole("Administrator"))
    {
    @Html.ActionLink("Redigér", "Edit", new {  Model.ProductNumber })
    }
    <a asp-action="Index" asp-controller="Product">Tilbage</a>
</div>

@using System.Security.Claims
@model IEnumerable<NetCafeUCN.MVC.Models.BookingDTO>

@{
    ViewData["Title"] = "Booking";
}

<h1>Bookings</h1>

<p>
    <a asp-action="Create">Opret ny</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label>Bookingnummer</label>
            </th>
            <th>
                <label>Starttid</label>
            </th>
            <th>
                <label>Sluttid</label>
            </th>
            <th>
                <label>Telefonnummer</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                @if (item.PhoneNo == @Context.User.Claims.FirstOrDefault(claim => claim.Type == ClaimTypes.MobilePhone)?.Value)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.BookingNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNo)
                    </td>
                    <td>
                        @Html.ActionLink("Oplysninger", "Details", new { item.BookingNo }) |
                        @Html.ActionLink("Slet", "Delete", new { item.BookingNo })
                    </td>
                }

            </tr>
}
    </tbody>
</table>

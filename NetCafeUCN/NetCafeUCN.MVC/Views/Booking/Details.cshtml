@using NetCafeUCN.MVC.Models.DTO
@model NetCafeUCN.MVC.Models.BookingDto

@{
    ViewData["Title"] = "Details";
}

<h1>Oplysninger</h1>

<div>
    <h4>Booking for @Html.DisplayFor(model => model.PhoneNo)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Bookingnummer:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingNo)
        </dd>
        <dt class = "col-sm-2">
            <label>Starttid:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class = "col-sm-2">
            <label>Sluttid</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt class = "col-sm-2">
            <label>Telefonnummer:</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNo)
        </dd>
        @foreach (BookingLineDto item in Model.BookingLines)
        {
            <dt class="col-sm-2">
                <label>Computer:</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.Stationid)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Index">Tilbage</a>
</div>

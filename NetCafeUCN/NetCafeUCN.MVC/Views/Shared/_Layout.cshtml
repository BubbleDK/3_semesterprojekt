@using System.Security.Claims;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UCN NetCafé</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="@Url.Content("~/css/SeatBooking.css")" rel="stylesheet" type="text/css" />
    @RenderSection("SeatBookingStyles", false)
    <link rel="stylesheet" href="~/NetCafeUCN.MVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-inverse bg-white border-bottom box-shadow mb-1">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/content/NETCAFEUCN.png" width="40" height="30"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (Context.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Produkter</a>
                            </li>
                        }
                        @if (Context.User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Brugere</a>
                            </li>
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link  dropdown-toggle text-dark" data-bs-toggle="dropdown">Booking</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Booking" asp-action="Create">Opret booking</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Booking" asp-action="Index">Find booking</a></li>
                            </ul>
                        </li>
                    </ul>
                    
                    <ul class="nav navbar-nav navbar-right">
                        
                            @if (Context.User.Identity.IsAuthenticated)
                            {
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="LogOut"><span class="glyphicon glyphicon-log-out"></span> Log out</a></li>
                            }
                            else
                            {
                            <li><a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Create"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                            <li> <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="LogIn"><span class="glyphicon glyphicon-log-in"></span> Log in</a></li>
                            }
                        
                        
                    </ul>
                </div>
            </div>
             @if (Context.User.Identity.IsAuthenticated)
        {
            <span>Logged in as 
                @Context.User.Claims.FirstOrDefault((claim)=> claim.Type == ClaimTypes.Name)?.Value</span>
        }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - NetCafe - <a asp-area="" asp-controller="Booking" asp-action="Create">Book en computer</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model IEnumerable<NetCafeUCN.MVC.Models.Customer>

@{
    ViewData["Title"] = "Kunder";
}
<head>
    <link rel="stylesheet" href="~/css/TabStyle.css" />
    
</head>
<script src="~/js/TabScript.js"></script>
<h1>Kunder</h1>

<div class="tab">
    <button class="tablinks" onclick="openTab(event,'Customer')" id="defaultOpen">Kunder</button>
    <button class="tablinks" onclick="openTab(event,'Employee')">Medarbejdere</button>
</div>
<script>
    document.getElementById("defaultOpen").click();
</script>
<div class="tabcontent" id="Customer">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
                
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
</div>



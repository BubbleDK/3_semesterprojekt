@using NetCafeUCN.MVC.Models.DTO;
@model GamingStationConsumableViewModel;

@{
    ViewData["Title"] = "Produkter";
}
<head>
    <link rel="stylesheet" href="~/css/TabStyle.css" />

</head>

<script src="~/js/TabScript.js" > </script>
<h1>Produkter</h1>

<div class="tab">
    <button class="tablinks btn btn-primary btn-lg" id="defaultOpen" onclick="openTab(event,'GamingStation')">Computere</button>
    <button class="tablinks btn btn-primary btn-lg" onclick="openTab(event,'Consumable')">Mad & drikke</button>
</div>
@if (Model.gamingStations != null)
{
    <div class="tabcontent" id="GamingStation">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        ProductNumber
                    </th>
                    <th>
                        Type
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (GamingStation item in Model.gamingStations)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
}
@if (Model.consumables != null)
{
    <div class="tabcontent" id="Consumable">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        ProductNumber
                    </th>
                    <th>
                        Type
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Consumable item in Model.consumables)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
<script>
    document.getElementById("defaultOpen").click();
</script>
